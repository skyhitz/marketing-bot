{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowJs": true,
    "types":[
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types/**/*.d.ts",
      "./@types/**/*.d.ts"
    ],
    "baseUrl": "./"
  }
}